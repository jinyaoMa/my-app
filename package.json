{
  "name": "@jinyaoma/my-app",
  "author": "jinyaoMa<jinyao.ma@outlook.com>",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "app:dev": "cross-env .tools/wails3 task dev",
    "app:build": "cross-env PRODUCTION=true .tools/wails3 task build && cross-env .tools/upx -9 build/bin/my-app.exe",
    "app:update-build-assets": "cross-env .tools/wails3 task common:update:build-assets",
    "api:dev": "cross-env .tools/air -c air.toml",
    "frontend:app:dev": "pnpm --filter @jinyaoma/my-app run dev",
    "frontend:app:build": "pnpm --filter @jinyaoma/my-app run build",
    "frontend:components:dev": "pnpm --filter @jinyaoma/my-playground run dev",
    "frontend:components:build": "pnpm --filter @jinyaoma/my-components run build",
    "frontend:components:create": "esno ./.tools/components/create/index.ts",
    "frontend:docs:dev": "vitepress dev frontend/docs --port 8000",
    "frontend:docs:build": "vitepress build frontend/docs",
    "frontend:icons:build": "pnpm --filter @jinyaoma/my-icons run build",
    "doctor": "cross-env .tools/wails3 doctor",
    "install": "run-p -clns install:p:** || echo 'errors ignored'",
    "install:mkcert:ca": "mkdirp build/bin/certs && mkcert create-ca --organization 'Test CA' --country-code 'CN' --state '' --locality '' --validity 36524 --key build/bin/certs/ca.key --cert build/bin/certs/ca.cert",
    "install:mkcert:cert": "mkcert create-cert --ca-key build/bin/certs/ca.key --ca-cert build/bin/certs/ca.cert --validity 36524 --key build/bin/certs/localhost.key --cert build/bin/certs/localhost.cert",
    "install:p:mkcert": "run-s -clns install:mkcert:ca install:mkcert:cert",
    "install:p:frontend": "run-p -clns frontend:icons:build frontend:components:build",
    "install:p:backend:nsis": "winget install NSIS.NSIS --accept-package-agreements --accept-source-agreements --silent",
    "install:p:backend:air": "cross-env GOBIN='%cd%/.tools' go install github.com/air-verse/air@latest",
    "install:p:backend:wails": "cross-env GOBIN='%cd%/.tools' go install -v github.com/wailsapp/wails/v3/cmd/wails3@latest",
    "install:p:backend:upx": "curl -L -k https://github.com/upx/upx/releases/download/v5.0.2/upx-5.0.2-win64.zip > upx.zip && tar -zxf upx.zip && move upx-5.0.2-win64\\upx.exe .tools && rmdir /s/q upx-5.0.2-win64 && del upx.zip"
  },
  "noscripts": {
    "frontend:components:new": "esno ./.tools/components/create_component/index.ts",
    "frontend:components:test": "esno ./.tools/components/create_test_vue/index.ts",
    "frontend:components:docs": "esno ./.tools/components/create_vitepress_comp/index.ts"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "chalk": "^5.6.0",
    "cross-env": "^7.0.3",
    "esno": "^4.8.0",
    "mkcert": "^3.2.0",
    "mkdirp": "^3.0.1",
    "npm-run-all2": "^8.0.4",
    "vitepress": "^1.6.4"
  }
}
